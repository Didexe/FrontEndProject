<main id="main-home">
    <section id="articles">
        {{#each articles}}
        <article class="article-exerpt">
            <h2 class="heading">{{articleTitle}}</h2>
            <div class="image-wrapper">
                <img src="{{imageUrl}}" alt=""/>
            </div>
            <p class="exerpt">{{articleText}}</p>
        </article>
        {{/each}}
    </section>
    <section id="media">
        <article id="links">
            <h2 class="heading">From the blog</h2>
            <ul>
                <li><a href="javascript:void(0)">Consequat id anim sunt</a></li>
                <li><a href="javascript:void(0)">Aute proident dolore</a></li>
                <li><a href="javascript:void(0)">Exercitation amet</a></li>
                <li><a href="javascript:void(0)">Tempor magna nulla</a></li>
                <li><a href="javascript:void(0)">Tempor sunt excepteur</a></li>
                <li><a href="javascript:void(0)">Non aliquip nulla utr</a></li>
            </ul>
        </article>
        <article id="multi-media">
            <h2 class="heading">Multi-media</h2>
            <div id="media-wrapper">
                <div id="media-controls-left" onclick="mediaDecrease()"><i class="fa fa-angle-left fa-lg" aria-hidden="true"></i></div>
                {{#each multimedia}}
                {{#isSmallerThan7 @index}}
                <div class="media-item tooltip"><span class="tooltip-text">
                    {{multimediaText}}</span>
                    <img src="{{imageUrl}}" alt="Multimedia image"/>
                </div>
                {{else}}
                <div class="media-item tooltip hidden"><span class="tooltip-text">
                    {{multimediaText}}</span>
                    <img src="{{imageUrl}}" alt="Multimedia image"/>
                </div>
                {{/isSmallerThan7}}
                {{/each}}
                <div id="media-controls-right" onclick="mediaIncrease()"><i class="fa fa-angle-right fa-lg" aria-hidden="true"></i></div>
            </div>
        </article>
    </section>
</main>
