<div id="slider">
    <div class="shadow-top"></div>
    <div id="slider-controls-left" onclick="slideDirection(-1)" ><i class="fa fa-angle-left fa-2x" aria-hidden="true"></i></div>
    <div id="slider-images">
        {{#each slides}}
        {{#if @first}}
        <div id="slider-text-field-{{@index}}" class="slider-text-field visible">
            <h2 class="heading">{{slideTitle}}</h2>
            <p class="exerpt">{{slideText}}</p>
            <a href="javascript:void(0)">Read more</a>                        
        </div>
        <img id="slider-image-{{@index}}" class="slider-image visible" src="{{imageUrl}}" alt="slider image">
        {{else}}
        <div id="slider-text-field-{{@index}}" class="slider-text-field hidden">
            <h2 class="heading">{{slideTitle}}</h2>
            <p class="exerpt">{{slideText}}</p>
            <a href="javascript:void(0)">Read more</a>                        
        </div>
        <img id="slider-image-{{@index}}" class="slider-image hidden" src="{{imageUrl}}" alt="slider image">
        {{/if}}
        {{/each}}
    </div>
    <div id="slider-controls-right" onclick="slideDirection(1)" ><i class="fa fa-angle-right fa-2x" aria-hidden="true"></i></div>
    <div class="shadow-bottom"></div>
    <div id="slider-controls-bottom">
        {{#each slides}}
        {{#if @first}}
        <div id="control-bottom-{{@index}}" class="control-bottom active" onclick="slideSliderImages({{@index}})"></div>
        {{else}}
        <div id="control-bottom-{{@index}}" class="control-bottom" onclick="slideSliderImages({{@index}})"></div>
        {{/if}}
        {{/each}}
    </div>
</div>
